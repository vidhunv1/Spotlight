<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">#FF212121</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">#FFFFFF</item>

        <item name="android:windowBackground">@color/background_default</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/background_default</item>
    </style>

    <style name="AlertDialogTitle">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="colorControlNormal">#c9c9c9</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogMessage">
        <item name="android:textColor">#212121</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontRobotoMedium">
        <item name="fontPath">fonts/roboto-medium.ttf</item>
    </style>

    <style name="TabStyle">
        <item name="fontPath">fonts/roboto-medium.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/appElement</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <style name="AppTheme.Drawer" parent="AppTheme">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#ffffff</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/appElement</item>
    </style>

    <style name="CheckBoxStyleInvite" parent="Theme.AppCompat">
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="GifSearchEditTextStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/appElement</item>
        <item name="colorControlActivated">@color/appElement</item>
        <item name="colorControlHighlight">@color/appElement</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#939393</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>

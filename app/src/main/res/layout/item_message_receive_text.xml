<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_profileImage"
        android:layout_toEndOf="@+id/iv_profileImage"
        android:background="@drawable/bg_msg_receive"
        android:paddingTop="7.25dp"
        android:paddingBottom="7.25dp"
        android:maxWidth="258dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/tv_messageitem_message"
            android:text="FLE : Ã€ "
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxWidth="234dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/default_profile_image"
        android:id="@+id/iv_profileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp" />

</RelativeLayout>

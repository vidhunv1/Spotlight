<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="71dp"
                android:id="@+id/iv_chatItem_profileImage"
                android:src="@drawable/default_profile_image"
                android:paddingTop="5.25dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>

            <RelativeLayout
                android:id="@+id/chat_notification"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="4.5dp"
                android:layout_marginTop="9.75dp">
                <View
                    android:background="@drawable/bg_chat_notification_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_chat_notification"
                    android:layout_width="13.5dp"
                    android:layout_height="13.5dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_chatItem_content"
            android:layout_marginRight="16dp"
            android:paddingTop="14.5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="190dp"
                    tools:ignore="MissingPrefix"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#373A4B"
                    android:textSize="16sp"
                    android:id="@+id/tv_chatItem_contactName"
                    android:maxWidth="190dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_chatItem_time"
                        android:text="9:47 P.M."
                        android:textSize="14sp"
                        android:textColor="#A9ADC1"
                        android:layout_gravity="right" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="11dp"
                    android:layout_centerVertical="true"
                    android:layout_height="13dp"
                    app:srcCompat="@drawable/ic_delivery_read"
                    android:id="@+id/iv_delivery_status" />

                <TextView
                    android:layout_toRightOf="@+id/iv_delivery_status"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="#7A7D8D"
                    android:id="@+id/tv_chatItem_message"
                    android:ellipsize="end"
                    android:text="messageasdasdasdaasdadasdadssadsadsadsad" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25px"
        android:id="@+id/view_contactItem_divider"
        android:layout_marginLeft="84dp"
        android:background="@color/divider" />
</LinearLayout>
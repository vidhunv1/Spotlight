<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_receive_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_profileImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/default_profile_image" />

    <LinearLayout
        android:id="@+id/ll_bubble"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@+id/iv_profileImage"
        android:layout_toRightOf="@+id/iv_profileImage"
        android:background="@drawable/bg_msg_receive_full"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profileImage"
            android:maxWidth="258dp"
            android:paddingBottom="7.25dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="7.25dp">

            <TextView
                android:id="@+id/tv_rcv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxWidth="234dp"
                android:text="FLE : Ã€ "
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_rcv_template_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_lower_template_bottom"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rcv_button1"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="33.5dp"
                android:paddingRight="12dp"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="@color/buttonText"
                android:textAppearance="@style/FontRobotoMedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rcv_button2"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="33.5dp"
                android:paddingRight="12dp"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="@color/buttonText"
                android:textAppearance="@style/FontRobotoMedium"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rcv_button3"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:paddingLeft="33.5dp"
                android:paddingRight="12dp"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="@color/buttonText"
                android:textAppearance="@style/FontRobotoMedium"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/default_profile_image"
        android:id="@+id/iv_profileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp" />

    <LinearLayout
        android:background="@drawable/bg_msg_receive"
        android:orientation="vertical"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_profileImage"
        android:layout_toEndOf="@+id/iv_profileImage"
        android:layout_marginLeft="12dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profileImage"
            android:paddingTop="7.25dp"
            android:paddingBottom="7.25dp"
            android:maxWidth="258dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/tv_rcv_message"
                android:text="FLE : Ã€ "
                android:textColor="@color/textPrimaryDark"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxWidth="234dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_rcv_template_buttons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_receive_bottom"
            android:gravity="right">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:id="@+id/tv_rcv_button1"
                android:gravity="center_vertical"
                android:textColor="@color/buttonText"
                android:paddingRight="12dp"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:paddingLeft="33.5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:id="@+id/tv_rcv_button2"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:textColor="@color/buttonText"
                android:textSize="15dp"
                android:paddingLeft="33.5dp"
                android:paddingRight="12dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:id="@+id/tv_rcv_button3"
                android:textAllCaps="true"
                android:textColor="@color/buttonText"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="33.5dp"
                android:paddingRight="12dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

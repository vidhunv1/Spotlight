<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/iv_chatItem_profileImage"
            android:src="@drawable/default_profile_image"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="9dp"
            android:paddingRight="11dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/ll_chatItem_content">

            <TextView
                android:layout_width="match_parent"
                tools:ignore="MissingPrefix"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAppearance="@style/FontRobotoMedium"
                android:textColor="#212121"
                android:textSize="17sp"
                android:id="@+id/tv_chatItem_contactName"
                android:maxWidth="190dp" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view_contactItem_divider"
        android:layout_marginLeft="72dp"
        android:background="@color/divider" />
</LinearLayout>
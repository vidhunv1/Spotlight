<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_alignParentTop="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        android:id="@+id/tb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/actionBar"
        android:minHeight="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="20.5dp"
                android:text="Info"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="#373A4B"
                android:layout_toRightOf="@+id/iv_back"
                android:id="@+id/tb_message_title" />

            <ImageView
                android:id="@+id/iv_back"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_back"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_marginLeft="3.75dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:background="#000000"
        android:layout_below="@+id/tb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="204dp" />

    <ImageView
        android:id="@+id/profile_dp"
        android:layout_marginTop="146dp"
        android:background="#D9DDD9"
        android:layout_below="@+id/tb_sign_up"
        android:layout_width="116dp"
        android:layout_centerHorizontal="true"
        android:layout_height="116dp" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_marginTop="11dp"
        android:textSize="24dp"
        android:text="Airtel"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/FontRobotoMedium"
        android:layout_below="@+id/profile_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/textColor"
        android:id="@+id/profile_category"
        android:layout_marginTop="2dp"
        android:textSize="14dp"
        android:text="Mobile"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/textColor"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:id="@+id/profile_description"
        android:layout_marginTop="2dp"
        android:textSize="16dp"
        android:text="Recharge your phone. Recharge your phone. Recharge your phone."
        android:lines="7"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/ripple_signup"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:text="Start Chatting"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
</RelativeLayout>
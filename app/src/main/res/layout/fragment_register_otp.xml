<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_enter_otp"
        android:id="@+id/tv_otp_enter_the_otp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile Number"
        android:id="@+id/tv_otp_mobilenumber"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_otp_otp"
        android:layout_gravity="center_horizontal"
        android:hint="_ _ _ _ _ _"

        android:shadowColor="#3cb2e2"
        android:singleLine="true"
        android:focusable="true"
        android:maxLength="6"
        android:textSize="30dp"
        android:background="@null" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:id="@+id/btn_otp_continue"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#26353b"
        android:textColor="#ffffff"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textSize="18dp"
        android:typeface="sans" />

</LinearLayout>
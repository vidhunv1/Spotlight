<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:id="@+id/view_divider"
        android:background="#E6E6E6" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rv_message_box"
        android:elevation="10dp"
        android:layout_toLeftOf="@+id/sendMessage_send"
        android:layout_height="52dp">
        <com.chat.ichat.screens.message.MessageEditText
            android:layout_margin="8sp"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:layout_width="132dp"
            android:layout_weight="1"
            android:paddingEnd="44dp"
            android:minHeight="40dp"
            android:maxLines="5"
            android:layout_height="match_parent"
            android:id="@+id/et_sendmessage_message"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_message_edit_text"
            android:hint="@string/keyboard_hint"
            android:textColor="#333333"
            android:textSize="16sp"
            android:cursorVisible="true"
            android:inputType="textCapSentences"
            android:textCursorDrawable="@drawable/bg_cursor_message"
            android:textColorHint="@color/appElement">
        </com.chat.ichat.screens.message.MessageEditText>

        <ImageButton
            android:background="?android:selectableItemBackground"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/et_sendmessage_message"
            android:id="@+id/btn_message_smiley"
            app:srcCompat="@drawable/ic_emoticon_inactive"
            android:layout_alignBottom="@+id/et_sendmessage_message"
            android:layout_alignTop="@+id/et_sendmessage_message" />
    </RelativeLayout>

    <ImageButton
        android:background="?android:selectableItemBackground"
        android:id="@+id/sendMessage_send"
        android:layout_width="48dp"
        android:paddingRight="2dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_mic_selected" />

    <ImageButton
        android:background="?android:selectableItemBackground"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_toRightOf="@+id/btn_sendMessage_gallery"
        android:id="@+id/btn_sendMessage_gif"
        app:srcCompat="@drawable/ic_gif" />

    <ImageButton
        android:background="?android:selectableItemBackground"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_toRightOf="@+id/btn_sendMessage_camera"
        android:id="@+id/btn_sendMessage_gallery"
        app:srcCompat="@drawable/ic_gallery" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:id="@+id/btn_sendMessage_camera"
        android:layout_toRightOf="@+id/btn_add_circle"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/ic_camera" />

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="52dp"
        android:paddingLeft="6dp"
        android:id="@+id/btn_add_circle"
        android:layout_alignParentLeft="true"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/ic_add_circle" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/smiley_layout"
        android:background="#D9D9D9" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/rv_message_box"
        android:id="@+id/smiley_layout">
    </FrameLayout>
</RelativeLayout>
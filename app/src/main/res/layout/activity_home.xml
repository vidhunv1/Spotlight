<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/drawer_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:theme="@style/AppTheme.Drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        android:background="#FFFFFF"
        app:menu="@menu/drawer_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/drawer_nav_header"
                android:id="@+id/header"/>

            <TextView
                android:layout_toRightOf="@+id/iv_add_contact"
                android:layout_below="@+id/header"
                android:id="@+id/nav_item_add_contact"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="24dp"
                android:text="Add Contact"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textColor="@color/drawerText"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/iv_add_contact"
                android:layout_below="@+id/header"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_contact_add_dark"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/view_contactItem_divider"
                android:layout_below="@id/nav_item_add_contact"
                android:background="#D9D9D9" />

            <TextView
                android:layout_toRightOf="@+id/iv_contacts"
                android:layout_below="@+id/view_contactItem_divider"
                android:id="@+id/nav_item_contacts"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="24dp"
                android:text="Contacts"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textColor="@color/drawerText"/>

            <ImageView
                android:id="@+id/iv_contacts"
                android:layout_below="@+id/view_contactItem_divider"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_contacts"/>

            <TextView
                android:layout_below="@+id/nav_item_contacts"
                android:layout_toRightOf="@+id/iv_settings"
                android:id="@+id/nav_item_settings"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="sans-serif-medium"
                android:text="Settings"
                android:gravity="center_vertical"
                android:textColor="@color/drawerText"/>

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_below="@+id/nav_item_contacts"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_settings"/>

            <TextView
                android:layout_toRightOf="@+id/iv_help"
                android:layout_below="@+id/nav_item_settings"
                android:id="@+id/nav_item_faq"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="sans-serif-medium"
                android:text="iChat FAQ"
                android:gravity="center_vertical"
                android:textColor="@color/drawerText"/>

            <ImageView
                android:layout_below="@+id/nav_item_settings"
                android:id="@+id/iv_help"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/ic_help"/>
        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

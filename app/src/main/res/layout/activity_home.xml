<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/drawer_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:theme="@style/AppTheme.Drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        android:background="#FFFFFF"
        app:menu="@menu/drawer_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/drawer_nav_header"
                android:id="@+id/header"/>

            <LinearLayout
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_below="@+id/header"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:id="@+id/nav_item_add_contact"
                android:layout_height="48dp">
                <ImageView
                    android:layout_below="@+id/header"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/ic_contact_add_dark"/>

                <TextView
                    android:layout_toRightOf="@+id/iv_add_contact"
                    android:layout_below="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="24dp"
                    android:text="Add Contact"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/drawerText"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/view_contactItem_divider"
                android:layout_below="@id/nav_item_add_contact"
                android:background="#D9D9D9" />

            <LinearLayout
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:id="@+id/nav_item_contacts"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/ic_contacts"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="24dp"
                    android:text="Contacts"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/drawerText"/>
            </LinearLayout>

            <LinearLayout
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:id="@+id/nav_item_discover_bots"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/ic_bots"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="24dp"
                    android:text="Discover Bots"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/drawerText"/>
            </LinearLayout>

            <LinearLayout
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:id="@+id/nav_item_people_nearby"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/ic_near_me"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="24dp"
                    android:text="People Nearby"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/drawerText"/>
            </LinearLayout>

            <LinearLayout
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:id="@+id/nav_item_settings"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/ic_settings"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="24dp"
                    android:text="Settings"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/drawerText"/>
            </LinearLayout>

            <LinearLayout
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:id="@+id/nav_item_faq"
                android:layout_height="48dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/ic_help"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="24dp"
                    android:text="iChat FAQ"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:textColor="@color/drawerText"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/drawer_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:theme="@style/AppTheme.Drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        android:background="#FFFFFF"
        app:menu="@menu/drawer_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/drawer_nav_header"
                android:id="@+id/header"/>

            <TextView
                android:id="@+id/nav_item_contacts"
                android:paddingLeft="18dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_contacts"
                android:drawablePadding="30dp"
                android:text="Contacts"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textColor="#444444"/>

            <TextView
                android:id="@+id/nav_item_settings"
                android:paddingLeft="18dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="sans-serif-medium"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="30dp"
                android:text="Settings"
                android:gravity="center_vertical"
                android:textColor="#444444"/>

            <TextView
                android:id="@+id/nav_item_faq"
                android:paddingLeft="18dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:fontFamily="sans-serif-medium"
                android:drawableLeft="@drawable/ic_help"
                android:drawablePadding="30dp"
                android:text="iChat FAQ"
                android:gravity="center_vertical"
                android:textColor="#444444"/>
        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

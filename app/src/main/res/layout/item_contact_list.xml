<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="79dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="78dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/iv_contactItem_profileImage"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:background="#7a7a7a" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_contactItem_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="194.67dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Name"
                    android:id="@+id/tv_contactItem_contactName"
                    android:layout_marginLeft="14dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:alpha="0.95"
                    android:layout_marginTop="9dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="223dp"
                    android:layout_height="37.17dp"
                    android:text="status"
                    android:id="@+id/tv_contactItem_status"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="14dp"
                    android:alpha="0.85"
                    android:lineSpacingExtra="1dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rectangle"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.33dp"
        android:background="#FFC2C2C2"
        android:paddingLeft="10dp"
        android:layout_marginLeft="82dp">
    </LinearLayout>

</LinearLayout>
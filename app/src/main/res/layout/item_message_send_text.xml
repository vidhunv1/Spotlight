<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/relativeLayout"
    android:paddingTop="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_msg_send"
        android:id="@+id/rel"
        android:paddingTop="7.25dp"
        android:paddingBottom="7.25dp"
        android:maxWidth="258dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp">

        <TextView
            android:text="Hello"
            android:layout_width="wrap_content"
            android:id="@+id/tv_messageitem_message"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:maxWidth="234dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_delivery_pending"
        android:id="@+id/iv_delivery_status"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:baselineAlignBottom="false"
        android:layout_alignParentTop="false" />
</RelativeLayout>

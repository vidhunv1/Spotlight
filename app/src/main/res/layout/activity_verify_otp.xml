<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:text="Your SMS verification code has been sent to your phone:"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="14dp"
        android:text="+91 9999999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:layout_marginRight="6dp"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:text="Code"
                android:textColor="#373A4B"
                android:textCursorDrawable="@drawable/bg_cursor_black"
                android:inputType="number"
                android:gravity="center_vertical|left"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_otp"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:hint="Mobile Number"
                android:textColor="#373A4B"
                android:textColorHint="#BEC0CE"
                android:inputType="phone"
                android:paddingBottom="7.25dp"
                android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:id="@+id/sign_up_mobile_divider"
        android:background="@color/divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:text="Your SMS should arrive in 54 seconds."/>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:textAllCaps="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_signup_button"
        android:text="NEXT"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>
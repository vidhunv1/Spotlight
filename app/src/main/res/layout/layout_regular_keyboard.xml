<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:id="@+id/view_divider"
        android:background="#d9d9d9" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@+id/view_divider"
        android:orientation="horizontal"
        android:id="@+id/ll_keyboard">

        <ImageButton
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="1dp"
            android:paddingTop="0.75dp"
            android:src="@drawable/ic_smiley"
            android:background="@android:color/transparent"
            android:id="@+id/btn_message_smiley" />

        <com.chat.ichat.screens.message.MessageEditText
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:maxLines="5"
            android:layout_height="wrap_content"
            android:id="@+id/et_sendmessage_message"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Message"
            android:textColor="#000000"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/bg_cursor_message"
            android:textColorHint="#FFADADAD">
            <requestFocus/>
        </com.chat.ichat.screens.message.MessageEditText>

        <ImageButton
            android:layout_weight="0"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_gravity="bottom"
            android:id="@+id/btn_sendMessage_camera"
            app:srcCompat="@drawable/ic_camera"
            android:background="@android:color/transparent"/>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_marginTop="6dp"
            android:layout_width="49dp"
            android:layout_height="34dp"
            android:id="@+id/btn_sendMessage_send"
            android:background="@drawable/bg_send_inactive"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <TextView
                android:textColor="#FFFFFF"
                android:text="SEND"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ll_keyboard"
        android:id="@+id/smiley_layout">
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:id="@+id/ll_keyboard">

        <ImageButton
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/ic_smiley"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:id="@+id/btn_message_smiley" />

        <com.stairway.spotlight.screens.message.MessageEditText
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/et_sendmessage_message"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="Message"
            android:textColor="#000000"
            android:textSize="18sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/bg_cursor_message"
            android:textColorHint="#FFADADAD">
            <requestFocus/>
        </com.stairway.spotlight.screens.message.MessageEditText>

        <ImageButton
            android:layout_weight="0"
            android:layout_width="48dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:id="@+id/btn_sendMessage_camera"
            app:srcCompat="@drawable/ic_camera"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_weight="0"
            android:layout_width="48dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:id="@+id/btn_sendMessage_send"
            app:srcCompat="@drawable/ic_mic"
            android:background="@android:color/transparent"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ll_keyboard"
        android:id="@+id/smiley_layout">
    </FrameLayout>
</RelativeLayout>
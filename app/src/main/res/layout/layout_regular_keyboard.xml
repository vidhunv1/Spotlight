<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:id="@+id/ll_keyboard">

        <ImageButton
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:srcCompat="@drawable/ic_smiley"
            android:background="@android:color/transparent"
            android:id="@+id/btn_message_smiley" />

        <com.stairway.spotlight.screens.message.MessageEditText
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:id="@+id/et_sendmessage_message"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="@string/keyboard_hint"
            android:textColor="#000000"
            android:textSize="16sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/bg_cursor_message"
            android:textColorHint="#FFADADAD">
            <requestFocus/>
        </com.stairway.spotlight.screens.message.MessageEditText>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/btn_sendMessage_send"
            app:srcCompat="@drawable/ic_keyboard_send"
            android:background="@android:color/transparent"
            android:layout_weight="1" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/ll_keyboard"
        android:id="@+id/smiley_layout">
    </FrameLayout>
</RelativeLayout>
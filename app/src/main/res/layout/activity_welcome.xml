<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="109.5dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34.5dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Welcome to iChat"
        android:textColor="#373A4B"
        android:layout_below="@id/welcome_logo"/>

    <Button
        android:stateListAnimator="@null"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/welcome_text"
        android:layout_gravity="center_horizontal"
        android:text="Sign Up"
        android:elevation="0dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="45.75dp"
        android:id="@+id/welcome_signup"
        android:textColor="#ffffffff"
        android:background="@drawable/bg_signup_button" />

    <Button
        android:stateListAnimator="@null"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/welcome_signup"
        android:elevation="0dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Log In"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:id="@+id/welcome_login"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/bg_login_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="#BEC0CE"
        android:text="Made with love in Bengaluru"
        android:gravity="top|center_horizontal" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/fl_settings_message_actions"
    android:fitsSystemWindows="true"
    android:background="#80000000">

    <RelativeLayout
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="302dp"
        android:layout_height="216dp"
        android:id="@+id/rl_add_contact_content"
        android:background="@drawable/bg_popup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="24dp"
                android:gravity="bottom"
                android:textAppearance="@style/FontRobotoMedium"
                android:id="@+id/heading"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:text="Message"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/message_action_copy_text"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Copy Text"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/message_action_delete"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="24dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Delete"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/message_action_details"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Details"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/textPrimaryLight" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:paddingTop="6dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_userprofile_dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/default_profile_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/tv_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="-2.25dp"
                    android:text="H"
                    android:textAppearance="@style/FontRobotoMedium"
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Active now"
                    android:layout_marginTop="0.25dp"
                    android:textColor="@color/textPrimaryLight"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35.25dp"
            android:paddingLeft="16dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profile_first_line_contact"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/ic_contact"/>

            <LinearLayout
                android:id="@+id/profile_first_line"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="airtel"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:id="@+id/tv_user_profile_id"
                    android:paddingLeft="55dp"/>

                <TextView
                    android:layout_marginTop="3.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#8A8A8A"
                    android:text="ID"
                    android:textSize="13sp"
                    android:paddingLeft="55dp"/>
            </LinearLayout>

            <View
                android:layout_below="@id/profile_first_line"
                android:layout_width="fill_parent"
                android:layout_height="0.25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="55dp"
                android:id="@+id/profile_first_line_divider"
                android:background="#d9d9d9" />

            <ImageView
                android:id="@+id/profile_second_line"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_below="@id/profile_first_line_divider"
                app:srcCompat="@drawable/ic_profile_notification"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/profile_first_line_divider"
                android:layout_toRightOf="@id/profile_second_line"
                android:layout_marginLeft="31dp"
                android:paddingRight="24dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Notifications"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="On"
                    android:textColor="@color/activeIndicator"
                    android:textSize="16sp"
                    android:gravity="center_vertical|right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/profile_second_line"
                android:layout_marginLeft="55dp"
                android:paddingRight="24dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Shared Media"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="0"
                    android:textColor="@color/activeIndicator"
                    android:textSize="16sp"
                    android:gravity="center_vertical|right" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user_profile_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_message"
        app:backgroundTint="#ffffff"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>
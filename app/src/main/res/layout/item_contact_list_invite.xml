<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:id="@+id/iv_contactItem_profileImage"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ll_contactItem_content">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/tv_contactItem_contactName"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13.47dp"
            android:maxWidth="190dp"
            android:textSize="17sp"
            android:textColor="#0A0919"
            android:maxLines="1" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Number"
            android:id="@+id/tv_contactItem_number"
            android:layout_marginLeft="14dp"
            android:textSize="15sp"
            android:textColor="#a60a0919"
            android:maxLines="1"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:text="INVITE"
        android:id="@+id/btn_contactItem_invite"
        android:textSize="13sp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/invite_background" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:layout_height="0.33dp"
        android:background="#FFC2C2C2"
        android:layout_weight="7.14"/>
</LinearLayout>
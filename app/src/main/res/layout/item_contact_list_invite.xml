<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="65dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ll_contactItem_content">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/tv_contactItem_contactName"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="13.47dp"
            android:maxWidth="190dp"
            android:textSize="17sp"
            android:textColor="#0A0919"
            android:maxLines="1" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Number"
            android:id="@+id/tv_contactItem_number"
            android:layout_marginLeft="24dp"
            android:textSize="15sp"
            android:textColor="#a60a0919"
            android:maxLines="1"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="INVITE"
        android:id="@+id/btn_contactItem_invite"
        android:textSize="14dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="48dp"
        android:paddingTop="8dp" />
</LinearLayout>
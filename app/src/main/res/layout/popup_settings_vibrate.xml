<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/fl_settings_vibrate"
    android:fitsSystemWindows="true"
    android:background="#80000000">

    <RelativeLayout
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="302dp"
        android:layout_height="364dp"
        android:id="@+id/rl_add_contact_content"
        android:background="@drawable/bg_popup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="16dp"
            android:paddingRight="6dp">
            <TextView
                android:paddingLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/FontRobotoMedium"
                android:id="@+id/heading"
                android:textSize="20sp"
                android:text="Vibrate"/>

            <RadioGroup
                android:paddingTop="8dp"
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_below="@id/heading"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingLeft="11dp"
                    android:textSize="16sp"
                    android:text="Disabled"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:id="@+id/rb_settings_default"
                    android:checked="true"
                    android:textSize="16sp"
                    android:paddingLeft="11dp"
                    android:text="Default"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:paddingLeft="11dp"
                    android:text="Short"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:paddingLeft="11dp"
                    android:text="Long"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:paddingLeft="11dp"
                    android:text="Only if silent"/>
            </RadioGroup>
            <TextView
                android:layout_width="90.75dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btn_add_contact"
                android:textAllCaps="true"
                android:textAppearance="@style/FontRobotoMedium"
                android:layout_gravity="bottom|right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
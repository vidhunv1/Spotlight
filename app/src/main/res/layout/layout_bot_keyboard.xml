<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="46dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.25dp"
        android:id="@+id/view_divider"
        android:background="#d9d9d9" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12.5dp"
            android:paddingTop="11.5dp"
            app:srcCompat="@drawable/ic_keyboard_menu"
            android:background="@android:color/transparent"
            android:id="@+id/message_menu" />

        <EditText
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:paddingBottom="0.25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_sendmessage_message"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:hint="@string/keyboard_hint"
            android:textColor="#000000"
            android:textSize="16sp"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/bg_cursor_message"
            android:textColorHint="#FFADADAD">
        </EditText>

        <RelativeLayout
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_width="49dp"
            android:layout_height="34dp"
            android:id="@+id/btn_sendMessage_send"
            android:background="@drawable/bg_send_active"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:textColor="#FFFFFF"
                android:text="SEND"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
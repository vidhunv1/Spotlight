<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/FontRobotoMedium"
            android:id="@+id/tb_message_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="76dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#353535"
                android:text="Name"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/sign_up_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:hint="Full Name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="76dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#353535"
                android:text="Country"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorPrimary"
                android:text="India"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/sign_up_country_code"
                android:layout_width="76dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textColor="#353535"
                android:text="+91"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/sign_up_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:inputType="phone"
                android:hint="Mobile Number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="76dp"
                android:layout_marginRight="8dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Password"
                android:textColor="#353535"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textWebPassword"
                android:textSize="16sp"
                android:hint="Enter Password"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_marginTop="24dp"
            android:textSize="17.5sp"
            android:textColor="#ffffff"
            android:text="Sign Up"
            android:layout_height="48dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="By tapping Sign Up you agree to the Terms of Service and Privacy Policy"
            android:textSize="12sp"
            android:textColor="#999999"/>
    </LinearLayout>
</LinearLayout>
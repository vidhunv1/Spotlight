<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/FontRobotoMedium"
            android:id="@+id/tb_message_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilName"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_name"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:hint="Full Name"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:textColor="#353535"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/sign_up_name_divider"
            android:background="#c9c9c9" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilEmail"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_email"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:hint="Email"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="textEmailAddress"
                android:textColor="#353535"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/sign_up_email_divider"
            android:background="#c9c9c9" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilPassword"
            android:layout_height="48dp"
            android:layout_width="fill_parent"
            android:layout_centerVertical="true"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_password"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:hint="Enter Password"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="textPassword"
                android:textColor="#353535"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/sign_up_password_divider"
            android:background="#c9c9c9" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilMobile"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:hint="Mobile Number"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="phone"
                android:textColor="#353535"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/sign_up_mobile_divider"
            android:background="#c9c9c9" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:textAllCaps="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_signup_button"
        android:text="Sign Up"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="By tapping 'Sign Up' you agree to iChat's Terms and Privacy Policy"
        android:textColor="#999999"
        android:textAlignment="center"
        android:textSize="11.5sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/FontRobotoMedium"
            android:id="@+id/tb_message_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:id="@+id/sign_up_tilName">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:hint="Full Name"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:paddingLeft="94dp"
                    android:textColor="#353535"
                    android:theme="@style/EditTextStyle"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/text_hint"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:paddingBottom="18dp"
                android:paddingLeft="8dp"
                android:text="Name"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:id="@+id/sign_up_tilEmail">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="94dp"
                android:textColor="#353535"
                android:theme="@style/EditTextStyle"
                android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:id="@+id/sign_up_tilPassword">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Enter Password"
                android:inputType="textWebPassword"
                android:theme="@style/EditTextStyle"
                android:paddingLeft="94dp"
                android:textColor="#353535"
                android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:paddingBottom="18dp"
                android:paddingLeft="8dp"
                android:text="Password"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:id="@+id/sign_up_tilMobile">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="94dp"
                android:textColor="#353535"
                android:theme="@style/EditTextStyle"
                android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/sign_up_country_code"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:paddingBottom="10dp"
                android:paddingLeft="28dp"
                android:text="+91"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimary"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:textSize="17.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="By tapping Sign Up you agree to the Terms of Service and Privacy Policy"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
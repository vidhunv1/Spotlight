<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/FontRobotoMedium"
            android:id="@+id/tb_message_title" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:hintEnabled="false">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_name"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Full Name"
                android:paddingBottom="7.25dp"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:textColor="#373A4B"
                android:textColorHint="#BEC0CE"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:id="@+id/sign_up_name_divider"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/full_name_error"
            android:layout_marginTop="2.75dp"
            android:layout_width="match_parent"
            android:layout_height="16.25dp"
            android:layout_marginBottom="19dp"
            android:textColor="@color/error"
            android:textSize="12dp"
            android:text="ERROR"
            android:visibility="invisible"
            android:gravity="end" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/sign_up_tilUserid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:hintEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/sign_up_userid"
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:hint="User ID"
                    android:paddingBottom="7.25dp"
                    android:textCursorDrawable="@drawable/bg_cursor_message"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:textColor="#373A4B"
                    android:textColorHint="#BEC0CE"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:layout_width="24dp"
                android:layout_alignParentRight="true"
                android:id="@+id/pb_checking_userid"
                android:visibility="invisible"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/iv_wrong_userid"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_wrong"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:id="@+id/sign_up_userid_divider"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/userid_error"
            android:layout_marginTop="2.75dp"
            android:layout_width="match_parent"
            android:layout_height="16.25dp"
            android:layout_marginBottom="19dp"
            android:textColor="@color/error"
            android:textSize="12dp"
            android:text="ERROR"
            android:visibility="invisible"
            android:gravity="end" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilPassword"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_centerVertical="true"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_password"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Enter Password"
                android:textColor="#373A4B"
                android:textColorHint="#BEC0CE"
                android:paddingBottom="7.25dp"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/sign_up_password_divider"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/password_error"
            android:layout_marginTop="2.75dp"
            android:layout_width="match_parent"
            android:layout_height="16.25dp"
            android:textColor="@color/error"
            android:textSize="12dp"
            android:layout_marginBottom="19dp"
            android:text=""
            android:visibility="invisible"
            android:gravity="end" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_up_tilMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_up_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_lock"
                android:drawableRight="@drawable/ic_flash_on"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:hint="Mobile Number"
                android:textColor="#373A4B"
                android:textColorHint="#BEC0CE"
                android:textCursorDrawable="@drawable/bg_cursor_message"
                android:inputType="phone"
                android:paddingBottom="7.25dp"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:id="@+id/sign_up_mobile_divider"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/mobile_error"
            android:layout_marginTop="2.75dp"
            android:layout_width="match_parent"
            android:layout_height="16.25dp"
            android:textColor="@color/error"
            android:visibility="invisible"
            android:textSize="12dp"
            android:text="ERROR"
            android:gravity="end" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_signup_button"
        android:text="Sign Up"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.5dp"
        android:text="By tapping 'Sign Up' you agree to iChat's Terms and Privacy Policy"
        android:textAlignment="center"
        android:textColor="#BEC0CE"
        android:textSize="11.5sp" />
</LinearLayout>
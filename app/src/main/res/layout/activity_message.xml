<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#FF888888">
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/keyboard_background"
            android:id="@+id/ll_keyboard"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:id="@+id/imageButton"
                android:layout_marginTop="14.5dp"
                android:layout_marginLeft="13.25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_smiley_icon"
                android:layout_gravity="bottom"
                android:background="#FFFFFFFF"/>

            <EditText
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_sendmessage_message"
                android:hint="Type Something..."
                android:focusable="false"
                android:layout_marginTop="6.5dp"
                android:textSize="15sp"
                android:maxLines="6"
                android:minHeight="35dp"
                android:background="@drawable/keyboard_edit_text"
                android:layout_marginLeft="13.25dp"
                android:layout_marginStart="13.25dp" />

            <ImageButton
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:id="@+id/btn_sendMessage_send"
                android:src="@drawable/ic_send_icon_rest"
                android:layout_marginTop="14.5dp"
                android:layout_marginStart="13.25dp"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="13.25dp"
                android:background="#FFFFFFFF"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rv_messageitem"
            android:name="com.stairway.spotlight.screens.home.chatlist.chatListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/ll_keyboard"
            />
    </RelativeLayout>
</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/messageBackground"
    android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:id="@+id/tb_message"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    android:text="hhh"
                    android:textSize="18sp"
                    android:textAppearance="@style/FontRobotoMedium"
                    android:textColor="@color/textPrimaryLight"
                    android:layout_toRightOf="@+id/iv_profile_image"
                    android:id="@+id/tb_message_title" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last seen while ago"
                    android:id="@+id/tb_message_presence"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="29dp"
                    android:layout_toRightOf="@+id/iv_profile_image"
                    android:textColor="@color/textSecondary" />
                <ImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="64dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/iv_back"
                    android:background="?selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="3.75dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_keyboard"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:focusableInTouchMode="true"
        android:layout_gravity="bottom">
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#DADADA"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_message"
        android:layout_above="@id/ll_keyboard">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_messageitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/message_add_block"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#AA9a9d99">
            <TextView
                android:id="@+id/message_block"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textAppearance="@style/FontRobotoMedium"
                android:text="BLOCK"/>
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF" />
            <TextView
                android:id="@+id/message_add"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textAppearance="@style/FontRobotoMedium"
                android:text="ADD"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_message_receive_text"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_bubble"
        android:paddingTop="2dp"
        android:paddingRight="0.25dp"
        android:text="9:47 PM"
        android:textColor="@color/messageInfoText"
        android:textSize="12sp"
        android:id="@+id/tv_time"
        android:gravity="center" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:src="@drawable/default_profile_image"
            android:id="@+id/iv_profileImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="235dp"
            android:id="@+id/rl_bubble"
            android:maxWidth="258dp"
            android:layout_marginRight="26dp">
            <ImageView
                android:background="@drawable/bg_msg_receive_full"
                android:id="@+id/location_image"
                android:layout_width="235dp"
                android:layout_height="235dp"
                android:layout_alignParentBottom="true" />

            <LinearLayout
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:id="@+id/location_description"
                android:background="@drawable/bg_lower_template_bottom"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="Forum Mall"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:textSize="12sp"
                    android:id="@+id/tv_place_name"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="Forum Mall"
                    android:textColor="@color/textColor"
                    android:id="@+id/tv_address"
                    android:paddingLeft="20dp"
                    android:paddingBottom="8dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        style="@style/AppTheme.ActionBarWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_search"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="242dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/et_search"
                    android:hint="Search"
                    android:textCursorDrawable="@drawable/bg_cursor_search"
                    android:textColorHint="@color/textHintColor"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textSize="18sp"
                    android:textColor="@color/textHintColor"
                    android:textColorLink="@android:color/black" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingRight="17dp"
                    android:paddingLeft="7dp"
                    android:src="@drawable/ic_close_inactive"
                    android:id="@+id/ib_search_clear"
                    android:layout_gravity="center_vertical|right"
                    android:background="#00000000"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#D6D6D6"/>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_contact_list"
        android:name="com.stairway.spotlight.screens.home.chatlist.chatListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".screens.home.chats.ChatListFragment"
        tools:listitem="@layout/item_contact" />
</LinearLayout>
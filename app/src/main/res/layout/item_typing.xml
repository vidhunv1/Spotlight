<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_message_receive_text"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:src="@drawable/default_profile_image"
            android:id="@+id/iv_profileImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profileImage"
            android:layout_toEndOf="@+id/iv_profileImage"
            android:background="@drawable/bg_msg_receive_full"
            android:id="@+id/rl_bubble"
            android:maxWidth="258dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginLeft="12dp">
            <ImageView
                android:id="@+id/iv_typing"
                android:layout_width="48dp"
                android:layout_height="38.5dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
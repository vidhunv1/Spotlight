<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="73.5dp"
            android:id="@+id/iv_chatItem_profileImage"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:paddingTop="10.75dp"
            android:paddingBottom="10.75dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_chatItem_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="190dp"
                    tools:ignore="MissingPrefix"
                    android:layout_height="wrap_content"
                    fontPath="fonts/din_medium.otf"
                    android:text="Name"
                    android:textColor="#F2000000"
                    android:textSize="17sp"
                    android:id="@+id/tv_chatItem_contactName"
                    android:maxWidth="190dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tv_chatItem_time"
                    android:paddingRight="14sp"
                    android:textAlignment="viewEnd"
                    android:textSize="12sp"
                    android:textColor="#1da1f2"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.95dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:textColor="#80000000"
                    android:id="@+id/tv_chatItem_message"
                    android:text="message"
                    android:paddingTop="1.1dp"
                    android:paddingBottom="1.1dp" />

                <TextView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    tools:ignore="MissingPrefix"
                    fontPath="fonts/din_medium.otf"
                    android:text="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/tv_chatlist_notification"
                    android:textSize="11sp"
                    android:textColor="#ffffff"
                    android:maxLines="1"
                    android:background="@drawable/chat_notification_background" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
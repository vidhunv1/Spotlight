<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover_picture"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="204dp" />

    <ImageView
        android:id="@+id/profile_dp"
        android:layout_marginTop="146dp"
        android:layout_below="@+id/tb_sign_up"
        android:layout_width="116dp"
        android:layout_centerHorizontal="true"
        android:layout_height="116dp" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_marginTop="11dp"
        android:textSize="24dp"
        android:text="Airtel"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="@style/FontRobotoMedium"
        android:layout_below="@+id/profile_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/textColor"
        android:id="@+id/profile_category"
        android:layout_marginTop="2dp"
        android:textSize="14dp"
        android:text="Mobile"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/textColor"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:id="@+id/profile_description"
        android:layout_marginTop="2dp"
        android:textSize="16dp"
        android:text="Recharge your phone. Recharge your phone. Recharge your phone."
        android:lines="7"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_get_started"
        android:background="@drawable/ripple_signup"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:text="Get STARTED"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
</RelativeLayout>